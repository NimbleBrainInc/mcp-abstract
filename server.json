{
  "$schema": "https://schemas.nimblebrain.ai/v1/nimblebrain-server.schema.json",
  "name": "ai.nimblebrain/abstract",
  "description": "Abstract API server with email validation, phone validation, IP geolocation, and more",
  "version": "0.2.0",
  "title": "Abstract API MCP Server",
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-abstract",
    "source": "https://github.com/NimbleBrainInc/mcp-abstract"
  },
  "_meta": {
    "ai.nimblebrain/v1": {
      "runtime": "python:3.13",
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "data-enrichment",
        "tags": [
          "email-validation",
          "ip-geolocation",
          "phone-validation",
          "currency",
          "web-scraping"
        ]
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "1000m"
        },
        "requests": {
          "memory": "256Mi",
          "cpu": "250m"
        }
      },
      "scaling": {
        "minReplicas": 1,
        "maxReplicas": 3
      }
    }
  }
}
